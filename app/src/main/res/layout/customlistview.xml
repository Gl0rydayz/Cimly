<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGrey">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="130dp">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center|center_horizontal"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvname"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="Email: abcdef@gmail.com"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvemail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="NumÃ©ro: +212_ ___ ___ __"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvid_perso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvnum"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="id:00000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvid_perso"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:text="Left at:     __:__" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvarrived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Arrived at:     __:__" />
    </androidx.cardview.widget.CardView>

    <!-- CircleImageView (floating above CardView) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/profiledefault"
        android:elevation="10dp"/>



</FrameLayout>
